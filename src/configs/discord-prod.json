{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "bot": {
      "description": "Configuration for the Discord bot",
      "properties": {
        "applicationId": {
          "description": "The application ID of the bot",
          "type": "string"
        },
        "guildId": {
          "description": "Testing guild ID",
          "type": "string"
        },
        "token": {
          "description": "The token of the bot (DO NOT SHARE THIS!)",
          "type": "string"
        },
        "mainServer": {
          "description": "Server ID that contains Rowifi api key",
          "type": "string"
        },
        "rowifiApi": {
          "description": "The token for Rowifi API",
          "type": "string"
        }
      },
      "required": ["applicationId", "guildId", "token"]
    },
    "channels": {
      "description": "Configuration for the Discord server",
      "properties": {
        "logs": {
          "description": "The channel ID for general logs",
          "type": "string"
        },
        "patrols": {
          "description": "The channel ID for patrol logs",
          "type": "string"
        },
        "image": {
          "description": "The channel ID for image logs",
          "type": "string"
        }
      },
      "required": ["logs", "patrols", "image"]
    }
  },
  "required": ["bot", "channels"]
}